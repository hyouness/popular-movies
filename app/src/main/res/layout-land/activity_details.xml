<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DetailsActivity"
    android:baselineAligned="false"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dip"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_backdrop_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_gravity="bottom|start"
                android:contentDescription="@string/movie_poster" />

            <ImageButton
                android:id="@+id/favorite_movie"
                android:layout_width="@dimen/favorite_icon_width"
                android:layout_height="@dimen/favorite_icon_height"
                android:src="@android:drawable/btn_star_big_off"
                android:scaleType="center"
                android:layout_gravity="top|end"
                android:background="@drawable/bookmark"
                android:contentDescription="@string/favorite_movie_icon"/>

            <ImageView
                android:id="@+id/iv_movie_poster"
                android:layout_width="@dimen/details_poster_port_width"
                android:layout_height="@dimen/details_poster_port_height"
                android:layout_gravity="bottom|start"
                android:layout_margin="@dimen/movie_poster_margin"
                android:layout_marginStart="@dimen/poster_start_margin"
                android:contentDescription="@string/movie_poster" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/movie_poster_margin"
                android:layout_marginEnd="@dimen/poster_start_margin"
                android:orientation="vertical"
                android:background="@drawable/poster_text_gradient">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/heart_icon_size"
                        android:layout_height="@dimen/heart_icon_size"
                        android:scaleType="centerInside"
                        android:src="@drawable/heart_icon"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/vote" />

                    <TextView
                        android:id="@+id/rating_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:text="@string/dummy_movie_rating"
                        android:padding="5dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="0dp"
                        android:textSize="@dimen/rating_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/vote_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@android:color/white"
                        android:text="@string/dummy_movie_rating"
                        android:padding="5dp"
                        android:paddingEnd="3dp"
                        android:paddingStart="5dp"
                        android:textSize="@dimen/rating_text_size"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="6">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical"
            android:layout_margin="0dp">
            <LinearLayout
                android:id="@+id/original_title_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/inline_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/original_title"
                    android:textSize="@dimen/details_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/original_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/details_text_size"
                    android:layout_marginStart="@dimen/inline_horizontal_margin" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/release_date_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/inline_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_date"
                    android:textSize="@dimen/details_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/release_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/details_text_size"
                    android:layout_marginStart="@dimen/inline_horizontal_margin" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overview"
                android:textStyle="bold"
                android:textSize="@dimen/details_text_size"
                android:layout_marginStart="@dimen/inline_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/overview_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/details_text_size"
                android:layout_marginTop="@dimen/headline_bottom_margin"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="@dimen/inline_horizontal_margin"
                android:layout_marginEnd="@dimen/inline_horizontal_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>